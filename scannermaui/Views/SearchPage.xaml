<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="scannermaui.Views.SearchPage"
    x:Name="SearchPageView"
    Title="Products">

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="20">
        <Grid Grid.Row="0"
              ColumnDefinitions="*, Auto"
              ColumnSpacing="10">
            <SearchBar Grid.Column="0"
                       Placeholder="Search products..."
                       Text="{Binding SearchText, Mode=TwoWay}"/>

            <Button Grid.Column="1"
                    Text="+"
                    Command="{Binding ShowAddProductCommand}"
                    HeightRequest="50"
                    Margin="0,0,20,0"
                    WidthRequest="50"
                    CornerRadius="30"
                    FontSize="20"
                    FontAttributes="Bold"
                    BackgroundColor="#4361EE"
                    TextColor="White"/>
        </Grid>

        <HorizontalStackLayout Grid.Row="1"
                               Spacing="10"
                               Margin="0,10,0,10">
            <Button Text="A to Z"
                    HeightRequest="35"
                    FontSize="14"
                    Command="{Binding SortByNameCommand}"
                    BackgroundColor="#6A11CB"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="15,0"/>

            <Button Text="Price: Low to High"
                    HeightRequest="35"
                    FontSize="14"
                    Command="{Binding SortByPriceLowToHighCommand}"
                    BackgroundColor="#6A11CB"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="15,0"/>

            <Button Text="Price: High to Low"
                    HeightRequest="35"
                    FontSize="14"
                    Command="{Binding SortByPriceHighToLowCommand}"
                    BackgroundColor="#6A11CB"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="15,0"/>
        </HorizontalStackLayout>

        <CollectionView x:Name="SearchResultsView"
                        Grid.Row="2"
                        Margin="0,20,0,0"
                        ItemsSource="{Binding SearchResults}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem
                                    BackgroundColor="#4361EE"
                                    IconImageSource="edit.png"
                                    Command="{Binding Source={x:Reference SearchResultsView}, 
                                                   Path=BindingContext.EditProductCommand}"
                                    CommandParameter="{Binding .}"/>

                                <SwipeItem IconImageSource="delete.png"
                                           BackgroundColor="#f2021a"
                                           Command="{Binding Source={x:Reference SearchResultsView}, 
                                                   Path=BindingContext.DeleteProductCommand}"
                                           CommandParameter="{Binding .}"/>
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame Margin="0,0,0,10"
                               Padding="15"
                               HasShadow="True"
                               BackgroundColor="White"
                               BorderColor="Transparent">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={x:Reference SearchResultsView}, 
                                             Path=BindingContext.NavigateToDetailsCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <Grid ColumnDefinitions="Auto,*,Auto"
                                  ColumnSpacing="15">

                                <Frame Grid.Column="0"
                                       HeightRequest="80"
                                       WidthRequest="80"
                                       Padding="0"
                                       CornerRadius="16"
                                       IsClippedToBounds="True"
                                       BorderColor="#E0E0E0">
                                    <Grid>
                                        <Image Source="{Binding ImageUrl}"
                                               Aspect="AspectFill"/>
                                        <BoxView BackgroundColor="#20000000"
                                                 Opacity="0.1"/>
                                    </Grid>
                                </Frame>

                                <VerticalStackLayout Grid.Column="1"
                                                     Spacing="8"
                                                     VerticalOptions="Center">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#333333"/>
                                    <Label Text="{Binding Price, StringFormat='â‚¹{0:N2}'}"
                                           FontSize="16"
                                           TextColor="Gray"/>
                                </VerticalStackLayout>


                                <Button Grid.Column="2"
                                        Text="ADD"
                                        Command="{Binding Source={x:Reference SearchResultsView}, Path=BindingContext.AddToCartCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#2ED573"
                                        TextColor="White"
                                        CornerRadius="5"
                                        VerticalOptions="Center"
                                        Padding="15,8"/>
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.RowSpan="3"
                           IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Color="#4361EE"/>
    </Grid>
</ContentPage>