<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:scannermaui.ViewModels"
             x:Class="scannermaui.Views.CartPage"
             Title="Cart"
             BackgroundColor="#F5F5F5">


    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <Label Text="Your Cart"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

        <CollectionView x:Name="CartListView"
                        ItemsSource="{Binding CartItems}"
                        SelectionMode="None"
                        Grid.Row="1"
                        BackgroundColor="Transparent">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15"
                           Margin="0,10"
                           BackgroundColor="White"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid ColumnDefinitions="Auto,*,Auto"
                              ColumnSpacing="15"
                              VerticalOptions="Center"
                              Padding="0,3">

                          
                             <Frame Grid.Column="0"
                                       HeightRequest="60"
                                       WidthRequest="60"
                                       Padding="0"
                                       CornerRadius="16"
                                       IsClippedToBounds="True"
                                       BorderColor="#E0E0E0">
                                    <Grid>
                                        <Image Source="{Binding ImageUrl}"
                                               Aspect="AspectFill"/>
                                        <BoxView BackgroundColor="#20000000"
                                                 Opacity="0.1"/>
                                    </Grid>
                                </Frame>

                         
                            <StackLayout Grid.Column="1"
                                         Spacing="2">
                                <Label Text="{Binding ProductName}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       VerticalOptions="Center"/>

                                <Label Text="{Binding Price, StringFormat='₹{0:N2}'}"
                                       FontSize="14"
                                       TextColor="Gray"
                                       VerticalOptions="Center"/>
                            </StackLayout>

                            
                            <StackLayout Grid.Column="2"
                                         Orientation="Horizontal"
                                         Spacing="8"
                                         VerticalOptions="Center">

                                <Button Text="–"
                                        FontSize="18"
                                        BackgroundColor="#FF6B6B"
                                        TextColor="White"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        CornerRadius="8"
                                        Command="{Binding Source={x:Reference CartListView}, Path=BindingContext.DecreaseQuantityCommand}"
                                        CommandParameter="{Binding .}">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding Quantity}"
                                                     Value="1">
                                            <Setter Property="IsVisible"
                                                    Value="False"/>
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                                <ImageButton Source="delete.png"
                                             WidthRequest="40"
                                             HeightRequest="40"
                                             Padding="8"
                                             BackgroundColor="#f2021a"
                                             CornerRadius="8"
                                             Command="{Binding Source={x:Reference CartListView}, Path=BindingContext.DecreaseQuantityCommand}"
                                             CommandParameter="{Binding .}"
                                             IsVisible="False">
                                    <ImageButton.Triggers>
                                        <DataTrigger TargetType="ImageButton"
                                                     Binding="{Binding Quantity}"
                                                     Value="1">
                                            <Setter Property="IsVisible"
                                                    Value="True"/>
                                        </DataTrigger>
                                    </ImageButton.Triggers>
                                </ImageButton>

                                <Label Text="{Binding Quantity}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       TextColor="Black"
                                       WidthRequest="25"
                                       HorizontalTextAlignment="Center"/>

                                <Button Text="+"
                                        FontSize="18"
                                        BackgroundColor="#2ED573"
                                        TextColor="White"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        CornerRadius="8"
                                        Command="{Binding Source={x:Reference CartListView}, Path=BindingContext.IncreaseQuantityCommand}"
                                        CommandParameter="{Binding .}"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Frame CornerRadius="15"
               HasShadow="True"
               Padding="20"
               BackgroundColor="#6A11CB"
               Grid.Row="2"
               Margin="0,20,0,10">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackLayout Grid.Column="0"
                             Orientation="Horizontal"
                             Spacing="10">
                    <Image Source="cart_icon.png"
                           WidthRequest="24"
                           HeightRequest="24"/>
                    <Label Text="{Binding TotalQuantity, StringFormat='Items: {0}'}"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </StackLayout>

                <Label Grid.Column="2"
                       Text="{Binding TotalAmount, StringFormat='Total: ₹{0:N2}'}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"/>
            </Grid>
        </Frame>



        <StackLayout Grid.Row="3"
                     Orientation="Horizontal"
                     Spacing="10"
                     Margin="0,0,0,10"
                     HorizontalOptions="Fill">

            <Button Text="Print Invoice"
                    FontSize="16"
                    TextColor="White"
                    BackgroundColor="#4361EE"
                    CornerRadius="8"
                    HeightRequest="50"
                    HorizontalOptions="FillAndExpand"
                    Command="{Binding PrintInvoiceCommand}">
                <Button.Shadow>
                    <Shadow Brush="#4361EE"
                            Offset="0,2"
                            Radius="4"
                            Opacity="0.5"/>
                </Button.Shadow>
            </Button>

            <Button Text="Share Invoice"
                    FontSize="16"
                    TextColor="White"
                    BackgroundColor="#6A11CB"
                    CornerRadius="8"
                    HeightRequest="50"
                    HorizontalOptions="FillAndExpand"
                    Command="{Binding ShareInvoiceCommand}">
                <Button.Shadow>
                    <Shadow Brush="#6A11CB"
                            Offset="0,2"
                            Radius="4"
                            Opacity="0.5"/>
                </Button.Shadow>
            </Button>
        </StackLayout>
    </Grid>
</ContentPage>
